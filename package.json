{
  "name": "joradoc",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build --sourcemap",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "npx patch-package",
    "start": "remix-serve build",
    "clean-build-and-cache": "rm -rf ./.cache && rm -rf ./build && rm -rf ./public/build",
    "clean": "npm run clean-build-and-cache && npm install && npm run postinstall"
  },
  "prettier": {
    "printWidth": 90,
    "tailwindConfig": "./tailwind.config.js"
  },
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/server/build",
    "/public/build"
  ],
  "dependencies": {
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "@sentry/remix": "*",
    "aws-sdk": "^2.1126.0",
    "dayjs": "^1.11.1",
    "dialog-polyfill": "^0.5.6
    "mongoose": "^6.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "*",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@sentry/cli": "*",
    "@tailwindcss/line-clamp": "*",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^15.0.0",
    "eslint": "*",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "prettier": "^2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.24"
  },
  "engines": {
    "node": ">=14"
  }
}
