{
  "name": "joradoc",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build --sourcemap",
    "dev": "run-p dev:*",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "postinstall": "npx patch-package",
    "start": "remix-serve build",
    "clean-build-and-cache": "rm -rf ./.cache && rm -rf ./build && rm -rf ./public/build",
    "clean": "npm run clean-build-and-cache && npm install && npm run postinstall"
  },
  "prettier": {
    "printWidth": 90,
    "tailwindConfig": "./tailwind.config.js"
  },
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node",
      "prettier"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/server/build",
    "/public/build"
  ],
  "dependencies": {
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "@sentry/remix": "*",
    "aws-sdk": "*",
    "dayjs": "*",
    "dialog-polyfill": "*",
    "mongoose": "*",
    "react": "*",
    "react-dom": "*",
    "remix": "*",
    "smoothscroll-polyfill": "*"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@sentry/cli": "*",
    "@tailwindcss/line-clamp": "*",
    "autoprefixer": "*",
    "concurrently": "*",
    "cross-env": "*",
    "dotenv": "*",
    "eslint": "*",
    "eslint-config-prettier": "*",
    "npm-run-all": "*",
    "postcss": "*",
    "prettier": "*",
    "prettier-plugin-tailwindcss": "*",
    "tailwindcss": "*"
  },
  "engines": {
    "node": ">=14"
  }
}
